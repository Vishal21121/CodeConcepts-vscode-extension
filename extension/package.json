{
  "name": "conceptreviser",
  "displayName": "Concept Reviser",
  "description": "Revise programming concepts without much efforts",
  "version": "1.0.2",
  "publisher": "VishalSingh",
  "icon": "assets/CR.png",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Education",
    "Programming Languages",
    "Other"
  ],
  "galleryBanner": {},
  "pricing": "Free",
  "repository": {
    "type": "git",
    "url": "https://github.com/Vishal21121/Concept-Reviser-vscode-extension"
  },
  "bugs": {
    "url": "https://github.com/Vishal21121/Concept-Reviser-vscode-extension/issues"
  },
  "keywords": [
    "concept",
    "reviser",
    "language",
    "learning",
    "education",
    "programming"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vscodeextension.deleteLang",
        "title": "Delete"
      },
      {
        "command": "vscodeextension.addLang",
        "title": "Add"
      }
    ],
    "viewsWelcome": [
      {
        "view": "moreQuestions",
        "contents": "You can solve more questions?\n[Solve Now](command:vscodeextension.solveMore)"
      },
      {
        "view": "userQuestions",
        "contents": "You can add your own questions?\n[Add Now](command:vscodeextension.addQuestions)\n[View Questions](command:vscodeextension.viewQuestions)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "conceptReviser",
          "title": "Concept Reviser",
          "icon": "assets/crosshair.svg"
        }
      ]
    },
    "views": {
      "conceptReviser": [
        {
          "id": "availableLanguages",
          "name": "Available Languages"
        },
        {
          "id": "choosenLanguage",
          "name": "Choosen Language"
        },
        {
          "id": "moreQuestions",
          "name": "More Questions"
        },
        {
          "id": "userQuestions",
          "name": "Questions"
        }
      ]
    },
    "menus": {
      "view/item/context": [
        {
          "command": "vscodeextension.deleteLang",
          "group": "inline",
          "when": "view == choosenLanguage"
        },
        {
          "command": "vscodeextension.addLang",
          "group": "inline",
          "when": "view == availableLanguages"
        }
      ]
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.85.0",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.8",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3"
  }
}
